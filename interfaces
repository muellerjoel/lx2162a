# /etc/network/interfaces
# Loopback interface
auto lo
iface lo inet loopback

## Add 1 Gbps NIC 
# eth0 configuration
auto eth0
iface eth0 inet dhcp
iface eth0 inet6 dhcp

# eth1 configuration
auto eth1
iface eth1 inet dhcp
iface eth1 inet6 dhcp

# eth2 configuration
auto eth2
iface eth2 inet dhcp
iface eth2 inet6 dhcp

# eth3 configuration
auto eth3
iface eth3 inet dhcp
iface eth3 inet6 dhcp

# eth4 configuration
auto eth4
iface eth4 inet dhcp
iface eth4 inet6 dhcp

# eth5 configuration
auto eth5
iface eth5 inet dhcp
iface eth5 inet6 dhcp

# eth6 configuration
auto eth6
iface eth6 inet dhcp
iface eth6 inet6 dhcp

# eth7 configuration
auto eth7
iface eth7 inet dhcp
iface eth7 inet6 dhcp

## Add SFP+ 10 Gbps & SFP28 25 Gbps
# eth8 configuration
auto eth8 
iface eth8 inet dhcp
iface eth8 inet6 dhcp

# eth9 configuration
auto eth9 
iface eth9 inet dhcp
iface eth9 inet6 dhcp

# eth10 configuration
auto eth10
iface eth10 inet dhcp
iface eth10 inet6 dhcp

# eth11 configuration
auto eth11 
